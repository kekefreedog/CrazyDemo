{{!-- Root --}}
<div id="crazy-root" descriptive-id="" class="screen-fit-min-y screen-flex screen-center">

    {{> preloader_linear_indeterminate}}

    {{> navigation}}

    {{!-- Body --}}
    <div id="crazy-content" descriptive-id="" class="element-flex-grow-1 pb-5">

        <div class="row container">

            <div class="col s12 m10 row">

                {{!-- Title --}}
                <div class="col s12">
                    <h1>Crazy Form</h1>
                </div>

                {{!-- Form --}}
                <div class="col s12">
                    <h4>Form</h4>
                </div>
                
                {{!-- Simple Form --}}
                <div class="col s6 m6">
                    <h5>Simple form</h5>
                    {{> form form=@root._ui.forms.simple_form}}
                </div>
                
                {{!-- Custom Form --}}
                <div class="col s6 m6">
                    <h5>Custom form</h5>
                    {{> form form=@root._ui.forms.custom_form}}
                </div>
                
                {{!-- Disabled Form --}}
                <div class="col s6 m6">
                    <h5>Disabled form</h5>
                    {{> form form=@root._ui.forms.disabled_form}}
                </div>
                
                {{!-- Read Only Form --}}
                <div class="col s6 m6">
                    <h5>Read only form</h5>
                    {{> form form=@root._ui.forms.readonly_form}}
                </div>
                
                {{!-- Default Form --}}
                <div class="col s6 m6">
                    <h5>Default form</h5>
                    {{> form form=@root._ui.forms.default_form}}
                </div>
                
                {{!-- Required Form --}}
                <div class="col s6 m6">
                    <h5>Required form</h5>
                    {{> form form=@root._ui.forms.required_form}}
                </div>
                
                {{!-- Multiple Form --}}
                <div class="col s6 m6">
                    <h5>Multiple form</h5>
                    {{> form form=@root._ui.forms.multiple_form}}
                </div>

            </div>

        </div>

    </div>

</div>